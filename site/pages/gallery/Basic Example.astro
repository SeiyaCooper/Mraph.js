---

<Example title="Basic Example">
    <script>
        import * as mp from "../../../src/mraph.js";

        const layer = new mp.Layer().appendTo(document.body);
        const timeline = new mp.Timeline();

        const box = new mp.Box();
        box.material = new mp.BasicMaterial();
        box.material.color = mp.COLORS.COOPER_ORANGE;
        layer.add(box);

        mp.OrbitControl.attachToLayer(layer, timeline);
        timeline.play();
    </script>
</Example>
